<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="card">
  <h2 class="card-header">Edit Your Post</h2>
  <form class="card-body update-form">

    <div class="form-group">
      <label class="form-label">Title:</label>
      <input type="text" class="form-input" id="project-title" value="{{title}}" />

    </div>

    <div class="form-group">
      <label class="form-label">Description:</label>
      <textarea class="form-textarea form-input" id="project-description">{{description}}</textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary"><i class="bi bi-pencil"></i>Edit Post</button>
    </div>

  </form>

</div>
<script src="/js/edit.js"></script>