<div class="text-center">
  <h2 class="fw-bold">{{title}}</h2>
  <p>Project Details: {{description}}</p>
  <p>&#x1F916; Created by {{user.name}} on {{format_date date_created}} &#x1F916;</p>
</div>

<div class="card">
  <h2 class="card-header bg-dark"> &#x1F916; Edit Your Post</h2>
  <form class="card-body update-form">

    <div class="form-group">
      <label class="form-label">Title:</label>
      <input type="text" class="form-input" id="project-title" value="{{title}}" />

    </div>

    <div class="form-group">
      <label class="form-label">Description:</label>
      <textarea class="form-textarea form-input" id="project-description">{{description}}</textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary bg-dark"><i class="bi bi-pencil"></i>Edit Post</button>
    </div>

  </form>

</div>
<script src="/js/edit.js"></script>